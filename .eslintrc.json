{
  "env": {
    "browser": true,
    "es2020": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": [
    "dist/",
    "node_modules/",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/__tests__/**",
    "vite.config.ts",
    "vitest.config.ts",
    "src/setupTests.ts",
    "src/vite-env.d.ts",
    ".eslintrc.json"
  ],
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-undef": "warn"
  }
}